<odoo>

    <data>

        <record id="entity_flag_tree" model="ir.ui.view">
            <field name="name">entity.flag.tree</field>
            <field name="model">entity.flag</field>
            <field name="arch" type="xml">
                <tree default_order="id asc">
                    <field name="barcode"/>
                    <field name="iso"/>
                    <field name="entity"/>
                    <field name="ratio_id"/>
                    <field name="place_holder" string="&#160;"/>
                    <field name="place_holder" string="&#160;"/>
                    <field name="place_holder" string="&#160;"/>
                    <field name="place_holder" string="&#160;"/>
                    <field name="place_holder" string="&#160;"/>
                    <field name="place_holder" string="&#160;"/>
                    <field name="place_holder" string="&#160;"/>
                    <field name="place_holder" string="&#160;"/>
                    <field name="place_holder" string="&#160;"/>
                </tree>
            </field>
        </record>

        <record id="entity_flag_form" model="ir.ui.view">
            <field name="name">entity.flag.form</field>
            <field name="model">entity.flag</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                    <group>
                        <field name="barcode" placeholder="Barcode" style="width:50%"/>
                        <field name="iso" placeholder="ISO" style="width:50%"/>
                        <field name="entity" placeholder="Entity" style="width:50%"/>
                        <field name="ratio_id" placeholder="Ratio" style="width:50%"/>
                    </group>
                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>

                </form>
            </field>
        </record>

        <record id="entity_flag_action" model="ir.actions.act_window">
            <field name="name">Flag Entity</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">entity.flag</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="entity_flag_menu"
                  name="Flag Entity"
                  action="entity_flag_action"
                  parent="flyration_flag_main_menu"
                  sequence="4"
                  />

    </data>
</odoo>