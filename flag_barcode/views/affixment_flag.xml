<odoo>

    <data>

        <record id="affixment_flag_tree" model="ir.ui.view">
            <field name="name">affixment.flag.tree</field>
            <field name="model">affixment.flag</field>
            <field name="arch" type="xml">
                <tree default_order="id asc">
                    <field name="barcode"/>
                    <field name="affixment"/>
                    <field name="place_holder" string="&#160;"/>
                    <field name="place_holder" string="&#160;"/>
                    <field name="place_holder" string="&#160;"/>
                </tree>
            </field>
        </record>

        <record id="affixment_flag_form" model="ir.ui.view">
            <field name="name">affixment.flag.form</field>
            <field name="model">affixment.flag</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                    <group>
                        <field name="barcode" placeholder="Barcode" style="width:50%"/>
                        <field name="affixment" placeholder="Affixment" style="width:50%"/>
                    </group>
                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>

                </form>
            </field>
        </record>

        <record id="affixment_flag_action" model="ir.actions.act_window">
            <field name="name">Flag Affixment</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">affixment.flag</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="affixment_flag_menu"
                  name="Flag Affixment"
                  action="affixment_flag_action"
                  parent="flyration_flag_main_menu"
                  sequence="4"
                  />

    </data>
</odoo>