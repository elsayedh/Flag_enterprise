<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model='ir.ui.view' id='tender_document_form_view'>
        <field name="name">tender.document.form</field>
        <field name="model">tender.document</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="doc_attachment_ids" widget="many2many_binary" class="oe_inline"/>
                            <field name="tender_ref" invisible="1"/>
                        </group>
                        <group>
                            <field name="date"/>
                            <field name="type"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record model='ir.ui.view' id='tender_document_tree_view'>
        <field name="name">tender.document.tree</field>
        <field name="model">tender.document</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="date"/>
                <field name="type"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="sales_tender_document_inherit_form_view">
        <field name="name">sales.tender.form.view</field>
        <field name="model">sales.tender</field>
        <field name="inherit_id" ref="uat_sales_tender.tender_sales_form"/>
        <field name="arch" type="xml">
            <div class="oe_button_box" position="inside">
                <button class="oe_stat_button" name="document_view" type="object" icon="fa-list-ol">
                    <field string="Documents" name="document_count" widget="statinfo"/>
                </button>
            </div>
        </field>
    </record>
</odoo>