<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model='ir.ui.view' id='product_tender_document_form_view'>
        <field name="name">product.tender.document.form</field>
        <field name="model">product.tender.document</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="supplier_id" groups="uat_sales_tender.group_sales_tender_manager"/>
                            <field name="description"/>
                        </group>
                        <group>
                            <field name="date"/>
                            <field name="doc_attachment_idss" widget="many2many_binary" class="oe_inline"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Documents">
                            <field name="supplier_doc_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record model='ir.ui.view' id='product_tender_document_tree_view'>
        <field name="name">product.tender.document.tree</field>
        <field name="model">product.tender.document</field>
        <field name="arch" type="xml">
            <tree>
                <field name="supplier_id"/>
                <field name="date"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="view_product_tender_document_search" model="ir.ui.view">
        <field name="name">product.tender.document.search</field>
        <field name="model">product.tender.document</field>
        <field name="arch" type="xml">
            <search string="Suppliers">
                <group expand="1" string="Group By">
                    <filter string="Suppliers" name="suppliers" context="{'group_by':'supplier_id'}"/>
                </group>
            </search>
        </field>
    </record>



</odoo>