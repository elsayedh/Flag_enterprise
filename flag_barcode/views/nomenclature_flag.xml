<odoo>

    <data>

        <record id="nomenclature_flag_tree" model="ir.ui.view">
            <field name="name">nomenclature.flag.tree</field>
            <field name="model">nomenclature.flag</field>
            <field name="arch" type="xml">
                <tree default_order="id asc">
                    <field name="barcode"/>
                    <field name="height"/>
                    <field name="ration"/>
                    <field name="width"/>
                    <field name="nomenclature"/>
                    <field name="place_holder" string="&#160;"/>
                </tree>
            </field>
        </record>

        <record id="nomenclature_flag_form" model="ir.ui.view">
            <field name="name">nomenclature.flag.form</field>
            <field name="model">nomenclature.flag</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                    <group>
                        <field name="barcode" placeholder="Barcode" style="width:50%"/>
                        <field name="height" placeholder="Height" style="width:50%"/>
<!--                        <field name="height2" placeholder="Height2" style="width:50%"/>-->
<!--                        <field name="standard_height" placeholder="Height" style="width:50%"/>-->
                        <field name="ration" placeholder="Ratio" style="width:50%"/>
                        <field name="width" placeholder="Width" style="width:50%"/>
                        <field name="nomenclature" placeholder="Flag Nomenclature" style="width:50%"/>

                        <field name="height_stored" placeholder="Height" invisible="False"/>

                    <button name="btn_bolean" type="object"
                    string="Change To Standard" class="oe_highlight"/>

                    </group>
                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>

                </form>
            </field>
        </record>

        <record id="nomenclature_flag_action" model="ir.actions.act_window">
            <field name="name">Flag Nomenclature</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">nomenclature.flag</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="nomenclature_flag_menu"
                  name="Flag Nomenclature"
                  action="nomenclature_flag_action"
                  parent="flyration_flag_main_menu"
                  sequence="4"
                  />

    </data>
</odoo>