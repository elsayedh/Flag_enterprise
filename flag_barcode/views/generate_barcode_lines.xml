<odoo>

    <data>


        <record id="generate_barcode_flag_line_tree" model="ir.ui.view">
            <field name="name">generate.barcode.flag.line.tree</field>
            <field name="model">generate.barcode.flag.line</field>
            <field name="arch" type="xml">
                <tree default_order="id desc"
                      decoration-bf="barcode">
                    <field name="barcode"/>
                    <field name="flyration_id"/>
                    <field name="nomenclature_id"/>
                    <field name="entity_id"/>
                    <field name="material_id"/>
                    <field name="material_color_id"/>
                    <field name="image_id"/>
                    <field name="faces_id"/>
                    <field name="affixment_id"/>

                </tree>
            </field>
        </record>

        <record id="generate_barcode_flag_line_form" model="ir.ui.view">
            <field name="name">generate.barcode.flag.line.form</field>
            <field name="model">generate.barcode.flag.line</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>

                    <group style="width:50%">
                        <field name="category_id" placeholder="Flag Category" style="width:30%"/>
                        <field name="entity_id" placeholder="Flag Entity" style="width:50%"/>
                        <field name="nomenclature_id" placeholder="Flag Nomenclature" style="width:50%"/>
                        <field name="material_id" placeholder="Flag Material" style="width:50%"/>
                        <field name="material_color_id" placeholder="Material Color" style="width:50%"/>
                        <field name="image_id" placeholder="Flag Image" style="width:50%"/>
                        <field name="faces_id" placeholder="Flag Face" style="width:50%"/>
                        <field name="affixment_id" placeholder="Flag Affixment" style="width:50%"/>
                        <field name="flyration_id" placeholder="Flag Flyratio" style="width:50%"/>
                        <field name="generate_code"/>
                    </group>


<!--                    <notebook>-->
<!--                        <page string="Generated Barcode">-->
<!--                            <field name="generate_code_lines">-->
<!--                                <tree default_order="id desc">-->
<!--                                <field name="barcode"/>-->

<!--                                </tree>-->
<!--                            </field>-->
<!--                        </page>-->
<!--                    </notebook>-->
                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>

                </form>
            </field>
        </record>

        <record id="search_generate_barcode_line" model="ir.ui.view">
        <field name="name">generate.barcode.flag.line.search</field>
        <field name="model">generate.barcode.flag.line</field>
            <field name="arch" type="xml">
                <search string="Flag Barcode">
                    <group expand="0" string="Group By">
                        <filter name="category_id" string="Category" domain="[]" context="{'group_by':'category_id'}"/>
                        <filter name="flyration_id" string="Flyratio" domain="[]" context="{'group_by':'flyration_id'}"/>
                        <filter name="nomenclature_id" string="Nomenclature" domain="[]" context="{'group_by':'nomenclature_id'}"/>
                        <filter name="entity_id" string="Entity" domain="[]" context="{'group_by':'entity_id'}"/>
                        <filter name="material_id" string="Material" domain="[]" context="{'group_by':'material_id'}"/>
                        <filter name="material_color_id" string="Material" domain="[]" context="{'group_by':'material_color_id'}"/>
                        <filter name="image_id" string="Images" domain="[]" context="{'group_by':'image_id'}"/>
                        <filter name="faces_id" string="Faces" domain="[]" context="{'group_by':'faces_id'}"/>
                        <filter name="affixment_id" string="Affixment" domain="[]" context="{'group_by':'affixment_id'}"/>
                    </group>
                </search>
            </field>
        </record>


        <record id="generate_barcode_flag_line_action" model="ir.actions.act_window">
            <field name="name">Generate Barcode Flag</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">generate.barcode.flag.line</field>
            <field name="view_mode">tree,form</field>
        </record>


        <menuitem id="generate_barcode_flag_line_menu"
                  name="Barcode Lines"
                  action="generate_barcode_flag_line_action"
                  parent="generate_flag_menu"
                  sequence="1"
                  />

    </data>
</odoo>