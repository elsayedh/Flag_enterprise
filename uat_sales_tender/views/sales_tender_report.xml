<odoo>
<data>

    <report
        id="sales_tender_report_id"
        model="sales.tender"
        string="Tender Contract"
        name="uat_sales_tender.sales_tender_template"
        file="uat_sales_tender.sales_tender_report_id"
        report_type="qweb-pdf"
        menu="False"/>


    <template id="sales_tender_template">
        <t t-call="web.external_layout">
        <t t-call="web.html_container">
              <t t-set="x" t-value="0" />
              <t t-foreach="docs" t-as="o">
                    <t t-set="emp_count" t-value="0"/>
                     <div class="page" dir="rtl">
                        <style type="text/css">
                            .td-y {
                            border: 1px solid #000000;
                            text-align: center;
                            font-family:Droid Arabic Naskh,serif;
                            }
                            .th-x{
                            font-family:Droid Arabic Naskh,serif;
                            <!--background-color: #32CD32 !important;-->
                            border: 1px solid #000000;
                            text-align: center;
                            }
                            .strong-x{
                            border:none;
                            text-align: center;
                            }
                        </style>

                        <br/>
                        <br/>

                         <table dir="ltr" class='table table-bordered' style="float:left; border-color:#000000 " width="100%">
                             <tr>
                                <td colspan="2"><h3>Tender #</h3></td>
                                 <td colspan="2">
                                    <span t-field="o.name"/>
                                 </td>
                             </tr>

                             <tr>
                                 <td style="width=100;text-align: center;">Ordering Date</td>
                                 <td  style="width=100;text-align: center;"><span t-field="o.ordering_date"/></td>
                                 <td style="width=200;text-align: center;">Partner</td>
                                 <td style="width=200;text-align: center;"><span t-field="o.partner_id.name"/></td>

                             </tr>
                             <tr>
                                <td style="width=100;text-align: center;">Delivery Date</td>
                                <td  style="width=100;text-align: center;"><span t-field="o.delivery_date"/></td >
                                <td style="width=200;text-align: center;">Company</td>
                                <td  style="width=200;text-align: center;"><span t-field="o.company_id.name"/></td>
                             </tr>
                         </table>

                        <br/>
                        <br/>
                        <br/>

                        <table class='table table-bordered' style="border-color:#333 " width="100%">
                            <thead style="border-color:#333">
                                <th style="border-color:#000000;text-align: center;" class="th-x" width="25 %">Product</th>
                                <th style="border-color:#000000;text-align: center;" class="th-x" width="25 %">Description</th>
                                <th style="border-color:#000000;text-align: center;" class="th-x" width="20 %">Price</th>
                                <th style="border-color:#000000 ;text-align: center;" class="th-x" width="15 %" >quantity</th>
                                <th style="border-color:#000000;text-align: center;" class="th-x" width="20 %">Total</th>
                            </thead>
                            <tbody>
                                <t t-foreach="o.tender_ids" t-as="tender_data">
                                    <tr>
                                        <td class="td-y" style="border-color:#000000;text-align: center;">
                                            <span t-field="tender_data.product_id.name"/>
                                        </td>
                                        <td class="td-y" style="border-color:#000000;text-align: center;">
                                            <span t-field="tender_data.description"/>
                                        </td>
                                        <td class="td-y" style="border-color:#000000;text-align: center;">
                                            <span t-field="tender_data.price"/>
                                        </td>
                                        <td class="td-y" style="border-color:#000000;text-align: center;">
                                               <span t-field="tender_data.quantity"/>
                                        </td>
                                        <td class="td-y" style="border-color:#000000;text-align: center;">
                                            <span t-field="tender_data.total"/>
                                        </td>

                                    </tr>
                                </t>
                            </tbody>

                        </table>
                    </div>
             </t>
        </t>
        </t>
    </template>

</data>
</odoo>