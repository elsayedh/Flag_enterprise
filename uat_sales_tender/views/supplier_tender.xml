<odoo>

    <data>

        <record id="tender_supplier_tree" model="ir.ui.view">
            <field name="name">supplier.tender.tree</field>
            <field name="model">supplier.tender</field>
            <field name="arch" type="xml">
                <tree string="Suppliers" default_order="id desc">
                    <field name="d_name"/>
                    <field name="company_id"/>
                    <field name="email"/>
                    <field name="country"/>
                </tree>
            </field>
        </record>

        <record id="tender_supplier_form" model="ir.ui.view">
            <field name="name">supplier.tender</field>
            <field name="model">supplier.tender</field>
            <field name="arch" type="xml">
                <form>

                    <sheet>
                    <div class="oe_button_box" name="button_box"/>

                    <field name="image" widget="image" class="oe_left oe_avatar"/>
                        <div class="oe_title">
                                <table>
                                    <h2>
                                    <tr>
                                        <td style="padding-right:15px; padding-left:15px; ">
                                            <field name="name"/>
                                        </td>
                                    </tr>
                                    </h2>
                                    <h1>
                                    <tr>
                                        <td style="padding-right:15px; padding-left:15px; ">
                                            <field name="d_name" required="1" placeholder="Supplier Name"/>
                                        </td>
                                    </tr>
                                    </h1>
                                </table>
                        </div>

                    <group>
                    <group>
                        <field name="company_id"/>
                        <field name="mobile"/>
                        <field name="email"/>
                    </group>
                    <group string="Address">
                        <label for="street" string="Address"/>
                        <div class="o_address_format">
                            <field name="street" placeholder="Street..." class="o_address_street"/>
                            <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                            <field name="city" placeholder="City" class="o_address_city"/>
                            <field name="c_state" class="o_address_state" placeholder="State" options='{"no_open": True}'/>
                            <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                            <field name="country" placeholder="Country" class="o_address_country" options='{"no_open": True, "no_create": True}'/>
                        </div>
                        <field name="website" widget="url" placeholder="e.g. www.odoo.com"/>
                    </group>

                    </group>
<!--                        <notebook>-->
<!--                            <page string="Tender Lines">-->
<!--                                <field name="tender_ids">-->

<!--                                    <tree editable="bottom">-->
<!--                                    </tree>-->
<!--                                </field>-->
<!--                            </page>-->
<!--                        </notebook>-->
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>

                </form>
            </field>
        </record>

        <record id="supplier_tender_action" model="ir.actions.act_window">
            <field name="name">Tender Suppliers</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">supplier.tender</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="tender_supplier_menu"
                  name="Suppliers"
                  action="supplier_tender_action"
                  parent="sales_tender_child"
                  sequence="3"
                  groups="uat_sales_tender.group_sales_tender_manager"
                  />

    </data>
</odoo>